doctype html
html(lang='en', dir='ltr')
  include partials/head.pug
  link(rel='stylesheet', href='/css/login.css')
  body(class='text-center')
    form(class='form-login', action='/account/login', method='post')
      img(class='mb-4', width='72', height='72', src='/img/brand.png', alt='')
      h1(class='h3 mb-3 font-weight-normal') Please log in
      label(for='inputEmail', class='sr-only') Email
      input(type='email', id='inputEmail', class='form-control', placeholder='Email', required, autofocus)
      label(for='inputPassword', class='sr-only') Password
      input(type='password', id='inputPassword', class='form-control', placeholder='Password')
      div(class='checkbox mb-3')
        label
          input(type='checkbox', value='remember-me')
          |  Remember me
      button(type='submit', class='btn btn-lg btn-primary btn-block') Log in
      p(class='mt-5 mb-3 text-muted') &copy; 2019
    
    include partials/scripts.pug
    script(src='/js/login.js')
